{
    "transform": {
        "^.+\\.(t|j)sx?$": [
            "ts-jest",
            {
                "useESM": true,
                "tsconfig": {
                    "verbatimModuleSyntax": false
                }
            }
        ]
    },
    "testRegex": "(/tests/.*.tests.ts)$",
    "moduleFileExtensions": [
        "js",
        "json",
        "jsx",
        "node",
        "ts",
        "tsx"
    ]
}
